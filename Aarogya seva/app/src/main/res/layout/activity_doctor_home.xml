<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0EEF5"
    tools:context=".DoctorHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/doctor_home"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/textView_dName"
                android:layout_width="143dp"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@android:color/holo_red_dark"
                android:paddingLeft="10dp"
                android:text="Name" />

            <EditText
                android:id="@+id/edittext_dName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:inputType="textEmailAddress"
                android:maxLines="1" />
        </LinearLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:focusable="auto"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_margin="30dp"
                android:background="@color/cardview_dark_background"
                android:clickable="true"
                android:focusable="auto"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/button_view_app"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/appointment"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/view_appointment"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>
    </LinearLayout>
</LinearLayout>

