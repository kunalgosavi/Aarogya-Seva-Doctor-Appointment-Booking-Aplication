<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/admin_d"
    tools:context=".AdminHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        >


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:focusable="auto"
            >




            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:focusable="auto">

                <androidx.cardview.widget.CardView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_margin="30dp"
                    android:background="@color/cardview_dark_background"
                    android:clickable="true"
                    android:focusable="auto"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/button_add_doc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/add_doc" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/add_doctor"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_margin="30dp"
                    android:background="@color/cardview_dark_background"
                    android:clickable="true"
                    android:focusable="auto"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/button_doc_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/doctor"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="@string/View_Doctor"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:focusable="auto">

                <androidx.cardview.widget.CardView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_margin="30dp"
                    android:background="@color/cardview_dark_background"
                    android:clickable="true"
                    android:focusable="auto"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/button_pat_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/patient"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/View_Patient"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_margin="30dp"
                    android:background="@color/cardview_dark_background"
                    android:clickable="true"
                    android:focusable="auto"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/button_view_appointment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/appointment"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="@string/view_appointment"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>


        </GridLayout>



    </ScrollView>


</GridLayout>

